{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": false,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "lib": [
      "es2020",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "dom"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}