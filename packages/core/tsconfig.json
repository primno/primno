{
  "compilerOptions": {
    "noEmitOnError": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    // "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "lib": [
      "es2020",
      "es2020.promise",
      "es2020.string",
      "dom"
    ],
    "outDir": "build",
    "declaration": true
  },
  "include": [
    "src",
    "rollup.config.ts"
  ]
}